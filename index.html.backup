<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">

    <title>RioRacer: Dog vs. Street | Play Free Online</title>
    <meta name="title" content="RioRacer: Dog vs. Street | Play Free Online">
    <meta name="description"
        content="Join Rio the dog in this intense endless runner! Dodge stray cats and dogs, master the double-jump, and compete on the global leaderboard. Play now for free!">
    <meta name="keywords"
        content="endless runner, dog game, arcade game, HTML5 game, browser game, RioRacer, indie game">
    <meta name="author" content="Mohamed Samy">

    <meta property="og:type" content="website">
    <meta property="og:url" content="https://rioracer.com/">
    <meta property="og:title" content="RioRacer: Dog vs. Street">
    <meta property="og:description"
        content="Help Rio survive the chaotic streets! A fast-paced arcade runner built with GenAI. Play now on mobile or desktop.">
    <meta property="og:image" content="https://rioracer.com/graphics/game_cover.png">

    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://rioracer.com/">
    <meta property="twitter:title" content="RioRacer: Dog vs. Street">
    <meta property="twitter:description"
        content="Help Rio survive the chaotic streets! A fast-paced arcade runner built with GenAI.">
    <meta property="twitter:image" content="https://rioracer.com/graphics/game_cover.png">

    <link rel="icon" type="image/png" href="graphics/game_cover.png">
    <link rel="manifest" href="manifest.json">
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Roboto:wght@400;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="style.css">

    <!-- JSON-LD SEO Schema -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "VideoGame",
      "name": "RioRacer: Dog vs. Street",
      "description": "An intense HTML5 endless runner where you control a dog dodging obstacles in a chaotic street. Features double-jumps, super-hero power-ups, and global leaderboards.",
      "genre": ["Endless Runner", "Arcade", "Action"],
      "url": "https://rioracer.com",
      "image": "https://rioracer.com/graphics/game_cover.png",
      "author": {
        "@type": "Person",
        "name": "Mohamed Samy"
      },
      "operatingSystem": "Web Browser",
      "applicationCategory": "Game",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      }
    }
    </script>
</head>

<body>

    <div id="portrait-warning">
        <div class="warning-content">
            <div class="rotate-icon">üîÑ</div>
            <h2>Please Rotate Your Device</h2>
            <p>RioRacer is best played in Landscape mode.</p>
        </div>
    </div>

    <!-- In-App Browser Warning (Facebook/Instagram) -->
    <div id="inapp-warning" class="hidden">
        <div class="warning-content">
            <div class="browser-icon">üåê</div>
            <h2>Better Experience Required</h2>
            <p>This app (Instagram/Facebook) limits game performance.</p>
            <p><strong>Please open in external browser:</strong></p>
            <div class="ios-instruction hidden">
                Tap <strong>...</strong> (Top Right) <br> Then <strong>Open in Browser</strong>
            </div>
            <button id="android-open-btn" class="primary-btn hidden">OPEN IN CHROME</button>
            <button id="close-warning-btn" class="secondary-btn">I'll Risk It</button>
        </div>
    </div>

    <div id="game-container">
        <canvas id="gameCanvas"></canvas>

        <!-- Start Screen -->
        <div id="start-screen" class="ui-overlay">
            <div class="ui-content-left">
                <img src="graphics/game_cover.png" alt="RioRacer Cover" id="cover-image">
            </div>
            <div class="ui-content-right">
                <h1 class="game-title">RioRacer</h1>
                <p class="subtitle">Dog vs. Street</p>
                <p class="start-highscore">High Score: <span id="start-highscore-value">0</span></p>
                <button id="start-btn" class="primary-btn">PLAY!</button>
            </div>
            <div class="version-tag">v1.8.6</div>
            <div class="contact-tag"><a href="mailto:hello@rioracer.com">hello@rioracer.com</a></div>
        </div>

        <!-- HUD (Heads Up Display) -->
        <div id="hud" class="hidden">
            <div id="score-container">
                <span id="score-label">SCORE: </span><span id="score">0</span>
            </div>
            <div id="highscore-container">
                <span id="highscore-label">HI: </span><span id="highscore">0</span>
            </div>
            <div id="highscore-alert" class="hidden">NEW HIGH SCORE!</div>
        </div>

        <!-- Game Over Screen -->
        <div id="game-over-screen" class="ui-overlay hidden">
            <div class="ui-content-left">
                <h1 class="game-over-title">GAME OVER!</h1>
                <p id="final-score">Score: 0</p>
                <div id="new-record-section" class="hidden">
                    <p class="record-msg">You made the Top 10!</p>
                    <input type="text" id="player-name-input" placeholder="Enter Name" maxlength="10">
                    <button id="submit-score-btn" class="primary-btn small-btn">SAVE</button>
                </div>
            </div>
            <div class="ui-content-right">
                <div id="leaderboard-container">
                    <h3>TOP 10 PLAYERS</h3>
                    <ul id="leaderboard-list">
                        <!-- Configured via JS -->
                        <li>Loading...</li>
                    </ul>
                </div>
                <button id="share-btn" class="secondary-btn">üì§ SHARE SCORE</button>
                <button id="restart-btn" class="primary-btn">TRY AGAIN</button>
            </div>
        </div>
    </div>

    <script type="module" src="script.js"></script>

    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('./sw.js')
                    .then((reg) => console.log('Service Worker registered!', reg))
                    .catch((err) => console.log('Service Worker failed:', err));
            });
        }
    </script>
</body>

</html>